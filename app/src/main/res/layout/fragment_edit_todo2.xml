<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/llTaskName"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/llTodoName">

            <EditText
                android:id="@+id/etTodoName"
                android:maxLines="1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Here's the name of the current todo."
                android:layout_weight="0.86"
                android:paddingBottom="18dp"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_below="@+id/llTaskName"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_below="@+id/line1"
        android:id="@+id/llDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:weightSum="1"
            android:id="@+id/llSetDueDate">

            <ImageView
                android:id="@+id/ivSetDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_set_due_date"
                android:alpha=".75"
                android:layout_gravity="center"
                android:onClick="openDatePicker"
                android:layout_weight="1.66"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:layout_height="match_parent"
            android:id="@+id/tvSetDueDate">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvSetDueDate"
                android:layout_weight="0.90"
                android:hint="Set Due Date"
                tools:text="Set Due Date"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@+id/llDueDate"
        android:id="@+id/line3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <LinearLayout
        android:layout_below="@+id/line3"
        android:id="@+id/llNote"
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.14"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:id="@+id/llAddNote">
            <ImageView
                android:id="@+id/ivAddNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_add_note"
                android:alpha=".75"
                android:layout_gravity="center"
                android:onClick="addNote"
                android:layout_weight="1.66"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:layout_height="match_parent"
            android:id="@+id/llWriteNote">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etNote"
                android:layout_weight="0.90"
                android:hint="Add a note..."
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:paddingTop="8dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@+id/llNote"
        android:id="@+id/line4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_below="@+id/line4"
        android:id="@+id/llSetPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:weightSum="1"
            android:id="@+id/llChoosePriority">

            <ImageView
                android:id="@+id/ivSetPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_low_priority_dialog"
                android:alpha=".75"
                android:layout_gravity="center"
                android:onClick="openDatePicker"
                android:layout_weight="1.66"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvSetPriority"
                android:layout_weight="0.90"
                android:hint="Set Task Priority"
                tools:text="Set Task Priority"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@+id/llSetPriority"
        android:id="@+id/line5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_below="@+id/line5"
        android:id="@+id/llSetCompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:weightSum="1">

            <ImageView
                android:id="@+id/ivSetCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_low_priority_dialog"
                android:alpha=".75"
                android:layout_gravity="center"
                android:onClick="openDatePicker"
                android:layout_weight="1.66"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:layout_height="match_parent">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvSetCompleted"
                android:layout_weight="0.90"
                android:hint="Set Completed"
                tools:text="Set Completed"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/btnSave"
            android:layout_weight="1"
            android:background="#40ffffff"
            android:textColor="#ffffffff"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            android:background="#40ffffff"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>

</RelativeLayout>