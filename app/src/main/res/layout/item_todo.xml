<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryMoreTransparent"
    android:paddingTop="12dp"
    android:id="@+id/llAddItem"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="12dp"
    android:weightSum="1"
    android:descendantFocusability="blocksDescendants">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbIsCompleted"
        android:theme="@style/checkBoxStyle"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Name"
        android:layout_marginLeft="21dp"
        android:layout_weight="0.9"
        android:layout_marginStart="21dp"
        android:layout_alignBaseline="@+id/cbIsCompleted"
        android:layout_alignBottom="@+id/cbIsCompleted"
        android:layout_toRightOf="@+id/cbIsCompleted"
        android:layout_toEndOf="@+id/cbIsCompleted"/>

    <TextView
        android:text="Feb 17, 2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDueDate"
        android:textColor="@android:color/white"
        android:textSize="6sp"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignBottom="@+id/tvName"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_low_priority"
        android:id="@+id/ivLowPriority"
        android:alpha=".75"
        android:layout_gravity="right"
        android:layout_weight="0.1"
        android:visibility="visible"
        android:paddingTop="2dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_medium_priority"
        android:id="@+id/ivMediumPriority"
        android:alpha=".75"
        android:layout_weight="0.1"
        android:layout_gravity="right"
        android:visibility="gone"
        android:paddingTop="2dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_high_priority"
        android:id="@+id/ivHighPriority"
        android:alpha=".75"
        android:layout_weight="0.1"
        android:layout_gravity="right"
        android:visibility="gone"
        android:paddingTop="2dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
